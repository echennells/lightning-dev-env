{
  "comment": "Version matrix configuration for testing different LNbits versions (all use Bitcoin Core 30.0, LiT 0.15.2, LND 0.18.4)",
  "version_sets": [
    {
      "name": "lnbits-stable",
      "description": "LNbits v1.3.0 stable release",
      "versions": {
        "bitcoin_core": "30.0",
        "litd": "v0.15.2-alpha",
        "lnd": "0.18.4-beta",
        "lnbits": "v1.3.0",
        "taproot_assets_ext": "main",
        "bitcoinswitch_ext": "main"
      }
    },
    {
      "name": "lnbits-main",
      "description": "LNbits main branch (pre-release, more stable than dev)",
      "versions": {
        "bitcoin_core": "30.0",
        "litd": "v0.15.2-alpha",
        "lnd": "0.18.4-beta",
        "lnbits": "dev",
        "taproot_assets_ext": "main",
        "bitcoinswitch_ext": "main"
      },
      "build_from_source": {
        "lnbits": {
          "repo": "https://github.com/lnbits/lnbits.git",
          "branch": "main",
          "dockerfile": "Dockerfile"
        }
      }
    },
    {
      "name": "lnbits-dev",
      "description": "LNbits dev branch (bleeding edge, default branch)",
      "versions": {
        "bitcoin_core": "30.0",
        "litd": "v0.15.2-alpha",
        "lnd": "0.18.4-beta",
        "lnbits": "dev",
        "taproot_assets_ext": "main",
        "bitcoinswitch_ext": "main"
      },
      "build_from_source": {
        "lnbits": {
          "repo": "https://github.com/lnbits/lnbits.git",
          "branch": "dev",
          "dockerfile": "Dockerfile"
        }
      }
    }
  ],
  "docker_images": {
    "comment": "Docker image templates - {version} will be replaced with values from version_sets",
    "bitcoin_core": "boltz/bitcoin-core:{version}",
    "litd": "lightninglabs/lightning-terminal:{version}",
    "lnd": "boltz/lnd:{version}",
    "lnbits": "lnbits/lnbits:{version}"
  },
  "extension_repos": {
    "taproot_assets": {
      "repo": "https://github.com/echennells/taproot_assets",
      "version_type": "tag"
    },
    "bitcoinswitch": {
      "repo": "https://github.com/echennells/bitcoinswitch",
      "version_type": "branch"
    }
  }
}
